    line(100, 295, 200, 250);
    stroke(0);
    strokeWeight(2);
    line(245, 295, 190, 160);
  }
}

function drawCloud(x, y) {
  ellipse(x, y, 100, 100);
}

function drawLightning(x, y) {
  ellipse(x, y, 30, 30);
}

function drawRect(x, y) {
  rect(x, y, 3.5, 13);
}
